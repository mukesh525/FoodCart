<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B71C1C"
    tools:context="com.mukesh.mealorder.ItemDetail"
    android:orientation="vertical">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/itemid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/app_bar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="Chinese Style Beef"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/itemdesc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/itemid"
        android:layout_marginLeft="10dp"
        android:padding="5dp"

        android:text="Chinese Style Beef Chinese Style Beef Chinese Style Beef Chinese Style Beef Chinese Style Beef Chinese Style BeefChinese Style Beef"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/itemdesc"
        android:layout_marginLeft="10dp"
        android:text="Price:20.00"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/itemimageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itemdesc"

        android:layout_alignEnd="@+id/itemid"
        android:layout_alignRight="@+id/itemid"
        android:layout_below="@+id/itemid"
        android:layout_toEndOf="@+id/itemdesc"
        android:layout_toRightOf="@+id/itemdesc"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/Quan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/qedit"
        android:layout_alignLeft="@+id/itemPrice"
        android:layout_alignStart="@+id/itemPrice" />

    <EditText
        android:id="@+id/qedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:background="#FFF"
        android:ems="10"
        android:inputType="numberSigned"
        android:layout_below="@+id/itemPrice"
        android:layout_alignRight="@+id/addbasket"
        android:layout_alignEnd="@+id/addbasket"
        android:layout_alignLeft="@+id/addbasket"
        android:layout_alignStart="@+id/addbasket" />

    <Button
        android:id="@+id/addbasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Basket"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp" />
</RelativeLayout>