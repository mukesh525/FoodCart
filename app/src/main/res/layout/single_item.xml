<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFECB3"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chinese Style Beef"
        android:id="@+id/itemid"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#6D4C41"
        android:layout_below="@+id/app_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chinese Style Beef Chinese Style Beef Chinese Style Beef Chinese Style Beef Chinese Style Beef Chinese Style BeefChinese Style Beef"
        android:id="@+id/itemdesc"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:maxLines="3"
        android:textColor="#000"
        android:layout_below="@+id/itemid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price(in Rupees):20.00"
        android:id="@+id/itemPrice"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_below="@+id/itemdesc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>